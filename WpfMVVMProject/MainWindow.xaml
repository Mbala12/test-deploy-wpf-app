<Window x:Class="WpfMVVMProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMVVMProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtInfo" Text="Hello Everybody" TextAlignment="Center" FontSize="30" Foreground="Navy" FontWeight="SemiBold" Margin="10,10,0,30"/>
        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txt1" Text="First Name: " FontSize="20" />
                <TextBox x:Name="txtb1" Text="Enter something" FontSize="20" Grid.Column="1"/>
                <Button x:Name="BtnTry" Height="50" Width="200" Content="Clear" FontSize="20" VerticalAlignment="Center" Grid.Column="2"/>
            </Grid>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txt2" Text="Middle Name: " FontSize="20" />
                <TextBox x:Name="txtb2" Text="Enter your Middle Name" FontSize="20" Grid.Column="1"/>
                <Button x:Name="BtnTry2" Height="50" Width="200" Content="Clear" FontSize="20" VerticalAlignment="Center" Grid.Column="2"/>
            </Grid>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="3" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txt3" Text="Last Name: " FontSize="20" />
                <TextBox x:Name="txtb3" Text="Enter your Last Name" FontSize="20" Grid.Column="1"/>
                <Button x:Name="BtnTry3" Height="50" Width="200" Content="Clear" FontSize="20" VerticalAlignment="Center" Grid.Column="2"/>
            </Grid>
            </StackPanel>
    </Grid>
</Window>
